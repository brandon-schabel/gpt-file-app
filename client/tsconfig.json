{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": [],
    "paths": {
      "src/*": ["./src/*"],
      "ui/*": ["./src/components/ui/*"],
      "shared/*": ["../shared/*"],
      "custom/*": ["./src/components/*"],
      "app-types": ["./src/lib/type-utils.ts"],
      "lib/*": ["./src/lib/*"]
    }
  },
  "include": ["src"]
}
